source 'https://rubygems.org'

# Foundation
gem 'rails', '3.2.11'

# Views
gem 'haml', '~> 3.1.6'
gem 'haml-rails'
gem 'sass'
gem 'jquery-rails'

# Run JavaScript code from Ruby
gem 'execjs'

# Embed the V8 JavaScript Interpreter into Ruby
gem 'therubyracer'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'ruby-debug19', :require => 'ruby-debug'
end
